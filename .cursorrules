# Reglas para desarrollo con HTML5, CSS y JavaScript según estándares oficiales

# Convenciones de archivos y nomenclatura
# MDN recomienda nombres descriptivos y consistentes: https://developer.mozilla.org/es/docs/Learn/Getting_started_with_the_web/Dealing_with_files
file_naming: lowercase-with-hyphens
directory_naming: lowercase-with-hyphens

# HTML5 - Basado en W3C: https://www.w3.org/TR/html5/
# Estructura semántica
html_doctype: html5-standard-required
html_semantic_elements: required
html_meta_viewport: required-for-responsive
html_lang_attribute: required-for-accessibility
html_alt_text: required-for-images
html_form_labels: required-for-each-input

# Accesibilidad WCAG 2.1: https://www.w3.org/WAI/standards-guidelines/wcag/
accessibility_heading_structure: logical-hierarchical
accessibility_aria_landmarks: required-for-navigation
accessibility_color_contrast: minimum-4.5-to-1
accessibility_keyboard_navigation: fully-supported

# CSS - W3C y MDN: https://www.w3.org/Style/CSS/ y https://developer.mozilla.org/es/docs/Web/CSS
css_naming_convention: BEM
css_id_selectors: minimize-prefer-classes
css_specificity: keep-low
css_reset: normalize-or-equivalent
css_media_queries: mobile-first-approach
css_flexbox_grid: preferred-over-floats
css_variables: use-for-theming
css_important: avoid-except-utilities

# JavaScript - ECMAScript 2022: https://tc39.es/ecma262/
javascript_strict_mode: always
javascript_variable_declarations: prefer-const-let
javascript_functions: arrow-for-callbacks
javascript_template_literals: preferred-over-concatenation
javascript_destructuring: use-for-objects-arrays
javascript_async_await: preferred-over-promises
javascript_modules: use-es-modules
javascript_error_handling: try-catch-for-async

# Rendimiento - Basado en Web Vitals: https://web.dev/vitals/
performance_image_optimization: webp-and-responsive
performance_script_loading: defer-or-async
performance_css_optimization: critical-inline
performance_lazy_loading: for-below-fold-content
performance_font_display: swap-or-optional
performance_minification: production-required

# Seguridad - OWASP: https://owasp.org/www-project-top-ten/
security_content_security_policy: implement
security_xss_prevention: sanitize-user-input
security_https_only: required
security_form_validation: client-and-server-side